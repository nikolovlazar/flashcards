datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Card {
  id  Int @id @default(autoincrement())
  question String
  answer String
  slug String
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}

model Category {
  id  Int @id @default(autoincrement())
  name String
  slug String
  cards Card[]
}